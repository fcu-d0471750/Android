<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@android:color/transparent">


        <TextView
            android:id="@+id/location_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="台中"
            android:textColor="#000000"
            android:textSize="24sp" />


        <ImageView
            android:id="@+id/id_index_gallery_item_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_below="@id/location_name_textview"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/pop_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_index_gallery_item_image"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"

            android:text="100% "
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/maxt_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_index_gallery_item_image"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"

            android:text="50 ℃"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/mint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/maxt_textview"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"

            android:text="50 ℃"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ci_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_index_gallery_item_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="晴午後多雲局部短暫陣雨或雷雨"
            android:textColor="#000000"
            android:textSize="15dp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>